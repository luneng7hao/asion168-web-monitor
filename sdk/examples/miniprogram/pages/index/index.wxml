<!--pages/index/index.wxml-->
<view class="container">
  <view class="header">
    <text class="title">🏠 首页</text>
    <text class="subtitle">微信小程序监控 SDK 测试</text>
  </view>

  <!-- 接口监控测试 -->
  <view class="card">
    <view class="card-title">🌐 接口监控测试</view>
    <button class="btn btn-primary" bindtap="testRequest">测试正常请求</button>
    <button class="btn btn-danger" bindtap="testErrorRequest">测试错误请求</button>
  </view>

  <!-- 用户行为测试 -->
  <view class="card">
    <view class="card-title">👆 用户行为追踪</view>
    <button class="btn btn-primary" bindtap="trackCustomEvent">追踪自定义事件</button>
  </view>

  <!-- 日志输出 -->
  <view class="card">
    <view class="card-title">📋 操作日志</view>
    <view class="log-area">
      <view class="log-item" wx:for="{{logs}}" wx:key="index">
        <text class="log-time">[{{item.time}}]</text>
        <text class="log-type">[{{item.type}}]</text>
        <text>{{item.message}}</text>
      </view>
      <view wx:if="{{logs.length === 0}}" class="log-empty">暂无日志</view>
    </view>
  </view>
</view>

