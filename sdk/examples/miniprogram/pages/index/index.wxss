/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.card {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ff6b6b;
}

.btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  border: none;
}

.btn-primary {
  background: #667eea;
  color: white;
}

.btn-danger {
  background: #f56c6c;
  color: white;
}

.log-area {
  background: #2d2d2d;
  color: #f8f8f2;
  padding: 30rpx;
  border-radius: 12rpx;
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.log-item {
  margin-bottom: 16rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #444;
}

.log-time {
  color: #888;
  margin-right: 10rpx;
}

.log-type {
  color: #67c23a;
  font-weight: bold;
  margin-right: 10rpx;
}

.log-empty {
  color: #888;
  text-align: center;
  padding: 40rpx 0;
}

